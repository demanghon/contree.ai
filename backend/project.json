{
    "name": "backend",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "uvicorn main:app --reload",
                "cwd": "backend"
            }
        },
        "install": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pip install -r requirements.txt",
                "cwd": "backend"
            }
        }
    }
}